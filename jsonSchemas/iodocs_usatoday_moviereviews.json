{
   "name":"Movie Reviews API",
   "version":"1.0",
   "title":"Movie Reviews API",
   "description":"The USA TODAY Movie Reviews API provides a method for retrieving USA TODAY movie review content. In addition to the textual content of a review, the API returns various types of metadata associated with each title. All reviews information is available in a JSON handler. Please refer to our documentation below which describes in detail how data can be requested and returned.",
   "protocol":"rest",
   "basePath":"http://api.usatoday.com/open",
   "auth":{
      "key":{
         "param":"api_key"
      }
   },
   "resources":{
      "Movie Reviews Methods":{
         "methods":{
            "Most Recent Movie Reviews":{
               "path":"/reviews/movies/recent",
               "httpMethod":"GET",
               "description":"Returns the most 25 most recent reviews. The number of reviews returned may be altered using the count parameter.",
               "parameters":{
                  "count":{
                     "type":"string",
                     "required":false,
                     "default":"",
                     "description":"Use this value to set the number of reviews returned. By default, most recent directory returns 25 reviews and the book and author directories return all available information.",
                     "location":"query"
                  },
                  "encoding":{
                     "type":"string",
                     "required":false,
                     "default":"json",
                     "description":"Supports only JSON format",
                     "enum":[
                        "json"
                     ],
                     "location":"query"
                  }
               }
            },
            "All reviews for a movie":{
               "path":"/reviews/movies/movies/search",
               "httpMethod":"GET",
               "description":"Returns the most 25 most recent reviews. The number of reviews returned may be altered using the count parameter.",
               "parameters":{
                  "search":{
                     "type":"string",
                     "required":true,
                     "default":"there+will+be+blood",
                     "description":"Search string for movie name. Example: there+will+be+blood",
                     "location":"pathReplace"
                  },
                  "encoding":{
                     "type":"string",
                     "required":false,
                     "default":"json",
                     "description":"Supports only JSON format",
                     "enum":[
                        "json"
                     ],
                     "location":"query"
                  }
               }
            },
            "Movie Reviews By Actor":{
               "path":"/reviews/movies/actors/search",
               "httpMethod":"GET",
               "description":"Returns detailed review information for all the films featuring a specific actor.",
               "parameters":{
                  "search":{
                     "type":"string",
                     "required":true,
                     "default":"tom+hanks",
                     "description":"Search string for actor name. Example: tom+hanks",
                     "location":"pathReplace"
                  },
                  "encoding":{
                     "type":"string",
                     "required":false,
                     "default":"json",
                     "description":"Supports only JSON format",
                     "enum":[
                        "json"
                     ],
                     "location":"query"
                  }
               }
            },
            "Movie Reviews By Director":{
               "path":"/reviews/movies/directors/search",
               "httpMethod":"GET",
               "description":"Returns detailed review information for all the films featuring a specific director.",
               "parameters":{
                  "search":{
                     "type":"string",
                     "required":true,
                     "default":"steven+spielberg",
                     "description":"Search string for director name. Example: steven+spielberg",
                     "location":"pathReplace"
                  },
                  "encoding":{
                     "type":"string",
                     "required":false,
                     "default":"json",
                     "description":"Supports only JSON format",
                     "enum":[
                        "json"
                     ],
                     "location":"query"
                  }
               }
            }
         }
      }
   }
}